<Window x:Class="ClientGUI.IPAddDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientGUI"
        mc:Ignorable="d"
        Title="IPAddDialog" Height="180" Width="300">
    <StackPanel Orientation="Vertical" Margin="15,15,15,0">
        <TextBlock Text="Please Enter Your IP Address and Port Number" FontFamily="Tw Cen MT" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="IP Address:" FontFamily="Tw Cen MT"/>
            <TextBox x:Name="txtIPAdd" Width="150" Margin="10,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
            <TextBlock Text="Port Number:" FontFamily="Tw Cen MT"/>
            <TextBox x:Name="txtPortNum" Width="100" Margin="10,0,0,0" HorizontalAlignment="Center"/>
        </StackPanel>

        <Button x:Name="btnConfirm" Content="Confirm" Margin="70,20,70,0" FontFamily="Tw Cen MT" Click="btnConfirm_Click"/>

    </StackPanel>
      
</Window>
